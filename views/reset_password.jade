extends layout
block content
 h2.page-header Reset Password 
 hr
 p Please Register using the form below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/updatePassword')
  .form-group 
   label Password
   input.form-control(name='password', type='password', placeholder='Enter Password')
  .form-group 
   label Confirm Password
   input.form-control(name='password2', type='password', placeholder='Retype Password')
  .form-group 
   
   input.form-control(name='userid', type='hidden', placeholder='hidden id', value='#{userId}' )
  
  
  input.btn.btn-primary(type='submit', name='submit', value='Update Password')